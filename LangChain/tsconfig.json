{
  "compilerOptions": {
    "target": "ES5", // Change target to ES5 for compatibility
    "module": "CommonJS", // Use CommonJS modules
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
